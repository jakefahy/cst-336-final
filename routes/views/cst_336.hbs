<script>
	beer = 0;
	wine = 0;
	other = 0;
	total = 0;
	weight = 0;
	time = 0;
	number_of_rows = 1
	$('#calc').on("click",calc);
    function calc(){
		beer = $("#beer").val() *12;   
		wine = $("#wine").val()*5;
		other = $("#alcohol").val() *1.5; 
		weight = $("#weight").val();
		time = $("#time").val();
		total = ((beer+wine+other))/weight; 
		total = total-(time*.017);
		$("total").text(total);
    }
